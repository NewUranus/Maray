<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maray.Views.NetSpeedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localVM="clr-namespace:Maray.ViewModels"
    Title="NetSpeedPage"
    x:DataType="localVM:NetSpeedPageVM">

    <Grid ColumnDefinitions="30,80">
        <Grid.GestureRecognizers>
            <DragGestureRecognizer DragStarting="DragGestureRecognizer_DragStarting" DropCompleted="DragGestureRecognizer_DropCompleted" />
        </Grid.GestureRecognizers>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </Grid.Resources>
        <Border Grid.RowSpan="2">
            <Grid RowDefinitions="*,*">
                <Label Grid.Row="0">↑</Label>
                <Label Grid.Row="1">↓</Label>
            </Grid>
        </Border>
        <Border
            Grid.RowSpan="2"
            Grid.Column="1"
            StrokeThickness="0">
            <Grid RowDefinitions="*,*">
                <Label FontSize="15" Text="{Binding NetSpeedSelectItemVM.SpeedSentHuman}" />
                <Label Grid.Row="1" Text="{Binding NetSpeedSelectItemVM.SpeedReceivedHuman}" />
            </Grid>
        </Border>
    </Grid>
</ContentPage>