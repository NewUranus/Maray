<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maray.Views.Server"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localM="clr-namespace:Maray.Models"
    xmlns:localVM="clr-namespace:Maray.ViewModels"
    Title="{Binding Title}"
    Shell.NavBarIsVisible="False">

    <VerticalStackLayout>
        <Entry
            x:Name="entry"
            Completed="OnEntryCompleted"
            Placeholder="Enter Node"
            TextChanged="OnEntryTextChanged" />

        <CollectionView ItemsSource="{Binding Servers}">
            <CollectionView.Header>
                <ImageButton
                    BorderColor="Yellow"
                    BorderWidth="2"
                    Command="{Binding AddServerCommand}"
                    HeightRequest="40"
                    Source="plus.png"
                    WidthRequest="40" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="localM:ServerM">
                    <Frame>
                        <Grid Padding="10">
                            <Label Text="{Binding v}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>