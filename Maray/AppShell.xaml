<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maray.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maray"
    xmlns:localViews="clr-namespace:Maray.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Server">
            <ShellContent ContentTemplate="{DataTemplate localViews:Server}" />
        </Tab>
        <Tab Title="Config">
            <ShellContent ContentTemplate="{DataTemplate localViews:Config}" />
        </Tab>
        <Tab Title="Setting">
            <ShellContent ContentTemplate="{DataTemplate localViews:Setting}" />
        </Tab>
    </TabBar>

</Shell>
